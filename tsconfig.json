{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": [] // This will prevent automatic inclusion of @types/node
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}